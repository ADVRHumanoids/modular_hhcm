    <xacro:macro name="add_pen" params="type name father">
        <link name="${name}"/>
        <joint name="fixed_${name}" type="fixed">
            <axis xyz="0 0 1" rpy="0 0 0" />
            <parent link="${father}"/>
            <child link="${name}"/>
            <origin xyz="0.0 0.0 0.222" rpy="0.0 0.0 0.0"/>
        </joint>
